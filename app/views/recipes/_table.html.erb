<table class="table table-striped table-active">
    <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>Value</th>
      <th>Actions</th>
    </tr>
    <% @recipe.all_ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.food.name %></td>
        <td><%= ingredient.quantity %> <%= ingredient.food.measurement_unit %></td>
        <td>$<%= ingredient.food.price * (ingredient.quantity / ingredient.food.quantity) %></td>
        <td><%= link_to 'Remove', recipe_food_path(ingredient),
          data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' },
          class: 'btn bg-danger text-light fw-bold' %></td>
      <tr>
    <% end %>
  </table>